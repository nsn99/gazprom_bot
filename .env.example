# Telegram Trading Bot для акций Газпром (GAZP) - Пример конфигурации

# Окружение
ENVIRONMENT=development
DEBUG=false

# Telegram Bot API
TELEGRAM__BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM__ADMIN_USER_IDS=123456789,987654321

# База данных
DATABASE__url=sqlite:///./gazprom_bot.db
DATABASE__echo=false

# AgentRouter (GPT-5)
AGENTROUTER__API_KEY=sk-your_agentrouter_api_key_here
AGENTROUTER__BASE_URL=https://agentrouter.org/v1
AGENTROUTER__MODEL=gpt-5

# MOEX API
MOEX__BASE_URL=https://iss.moex.com/iss
MOEX__BOARD=TQBR

# Риск-менеджмент
RISK__MAX_POSITION_RUB=30000.0
RISK__MAX_PORTFOLIO_RISK=0.02
RISK__STOP_LOSS_PCT=0.05
RISK__TAKE_PROFIT_PCT=0.10

# Исполнение сделок
EXECUTION__COMMISSION_PCT_PER_SIDE=0.0003
EXECUTION__SLIPPAGE_PCT=0.001

# Данные
DATA__CANDLE_INTERVAL_MIN=1
DATA__HISTORY_DAYS=30

# Логирование
LOGGING__LEVEL=INFO
LOGGING__CONSOLE_OUTPUT=true

# Мониторинг
MONITORING__ENABLED=true
MONITORING__SLOW_OPERATION_THRESHOLD=5.0

# Визуализация
VISUALIZATION__CHART_WIDTH=1200
VISUALIZATION__CHART_HEIGHT=800